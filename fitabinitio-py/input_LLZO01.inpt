&GLOBAL
 PRINT_LEVEL                    LOW 
 PROJECT_NAME                   LLZO01
 RUN_TYPE                       MD
&END GLOBAL
#
&MOTION
 &MD
  ENSEMBLE			NVE
  STEPS				0
  TIMESTEP			1.0000000000000000E-10
  TEMPERATURE			0.0001
 &END MD
#
 &PRINT
  &TRAJECTORY 			LOW
   FORMAT 			XMOL
   &EACH
    MD 				1
   &END EACH
  &END TRAJECTORY 
  &VELOCITIES 			LOW
   FORMAT			XMOL
   &EACH
    MD				1
   &END EACH
  &END VELOCITIES
